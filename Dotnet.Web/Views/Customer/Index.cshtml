@model List<CustomerModel>
@{
    int count = 1;
}

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>SN.</th>
                <th>FirstName</th>
                <th>LastName</th>
            
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.firstName</td>
                    <td>@item.lastName</td>
                
                    <td>
                        <a class="btn btn-primary" asp-route-id="@item.id">Update</a>
                        <a class="btn btn-danger" asp-route-id="@item.id">Delete</a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>